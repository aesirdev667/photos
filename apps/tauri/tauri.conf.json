{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Photos by Ã†sir Dev",
  "version": "0.1.0",
  "identifier": "com.aesirdev.photos",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun --cwd=../ui dev",
    "beforeBuildCommand": "bun --cwd=../ui generate"
  },
  "app": {
    "windows": [
      {
        "title": "Photos",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
